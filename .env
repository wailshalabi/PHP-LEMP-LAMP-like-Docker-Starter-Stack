# Container naming
COMPOSE_PROJECT_NAME=php-docker-starter

# PHP image tag (Debian bookworm based; avoids Debian buster EOL repo errors)
PHPVERSION=8.4-apache-bookworm

# Paths
DOCUMENT_ROOT=./www
VHOSTS_DIR=./config/vhosts
APACHE_LOG_DIR=./logs/apache2
XDEBUG_LOG_DIR=./logs/xdebug
PHP_INI=./config/php/php.ini
SSL_DIR=./config/ssl

# Host ports
HOST_MACHINE_UNSECURE_HOST_PORT=80
HOST_MACHINE_SECURE_HOST_PORT=443
HOST_MACHINE_MYSQL_PORT=3306
HOST_MACHINE_REDIS_PORT=6379
HOST_MACHINE_PMA_PORT=8080
HOST_MACHINE_PMA_SECURE_PORT=8443

# Mail (Mailpit)
HOST_MACHINE_MAILPIT_SMTP_PORT=1025
HOST_MACHINE_MAILPIT_HTTP_PORT=8025

# phpMyAdmin limits
UPLOAD_LIMIT=512M
MEMORY_LIMIT=512M

# Xdebug (optional)
XDEBUG_PORT=9003

# MySQL
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=user
MYSQL_PASSWORD=root
MYSQL_DATABASE=db
